{
  "build": {
    "command": "mkdir -p out && cp -r public/* out/",
    "output_directory": "out",
    "root_directory": null
  },
  "routes": [
    { "pattern": "/game/*", "script": null, "serve": "/game/index.html" },
    { "pattern": "/admin/*", "script": null, "serve": "/admin/index.html" },
    { "pattern": "/404.html", "script": null, "serve": "/404.html" }
  ],
  "environment_variables": {
    "NODE_VERSION": "18.x"
  },
  "headers": {
    "/**/*.html": {
      "Cache-Control": "public, max-age=0, must-revalidate"
    },
    "/**/*.js": {
      "Cache-Control": "public, max-age=31536000, immutable"
    },
    "/**/*.css": {
      "Cache-Control": "public, max-age=31536000, immutable"
    }
  }
} 